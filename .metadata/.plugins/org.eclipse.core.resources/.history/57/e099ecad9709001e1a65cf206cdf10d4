	public List<MemberVO> getMembers() {
		List<MemberVO> ㅡm = new ArrayList<>();
		try {
			Statement stmt = con.createStatement();
			ResultSet rs = stmt.executeQuery(String.format("select * from member"));
			
			while(rs.next()) {
				MemberVO m = MemberVO.builder().id(rs.getLong("id")).pass(rs.getString("pass")).name(rs.getString("name"))
						.regidate(rs.getDate("regidate")).build();
				mm.add(m);
			}
		}catch(Exception e) {
			e.printStackTrace();
		}
		return null;
	}

	
