package edu.pnu.controller;


import java.util.List;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RestController;

import edu.pnu.domain.Member;
import edu.pnu.service.MemberService;
import lombok.extern.slf4j.Slf4j;

@Slf4j
@RestController
public class MemberContoroller {
	
	private MemberService memberService;
	
	public MemberContoroller() {
		System.out.println("MemberController가 생성되었습니다.");
		log.info("MemberController가 생성되었습니다.");
		
		memberService = new MemberService();
	}
	
	@GetMapping("/member/{id}")
	public Member getMember(@PathVariable Long id) throws Exception {
		return memberService.getMember(id);
	}
	
	@GetMapping("/member") // 모든 멤버 테이터를 리턴
	public List<Member> getMembers(){
		return null;
	}
	
	
}
