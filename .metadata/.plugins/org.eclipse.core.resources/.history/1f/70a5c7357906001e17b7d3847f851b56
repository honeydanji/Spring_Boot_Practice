package edu.pnu.controller;

import java.util.List;

import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RestController;

import edu.pnu.domain.Member;
import edu.pnu.service.MemberService;
import lombok.extern.slf4j.Slf4j;

@Slf4j
@RestController
public class MemberContoroller {

	private MemberService memberService;

	public MemberContoroller() {
		System.out.println("MemberController가 생성되었습니다.");
		log.info("MemberController가 생성되었습니다.");

		memberService = new MemberService();
	}

	// localhost8080/member/{id}
	@GetMapping("/member/{id}")
	public Member getMember(@PathVariable Long id) throws Exception {
		return memberService.getMember(id);
	}

	@GetMapping("/member") // 모든 멤버 테이터를 리턴
	public List<Member> getMembers() {
		return memberService.getMember();
	}

	@PostMapping("/member")
	public Member insertMember(Member member) {
		// 여기서 'pass'와 'name' 값을 설정하거나 필요에 따라 수정.
		member.setPass("1234"); // 원하는 비밀번호 값을 설정.
		member.setName("하성진"); // 원하는 이름 값을 설정.
		return memberService.addMember(member);
	}

	@PutMapping("/member") // 멤버 이름, 암호 수정
	public Member updateMember(Member member) {
		member.setPass("1234"); // 원하는 비밀번호 값을 설정.
		member.setName("하성진"); // 원하는 이름 값을 설정.
		member.setId("1");
		return memberService.updateMember(member);
	}

	@DeleteMapping("/member")
	public Member deleteMember(@PathVariable Member member) {
		return memberService.deleteMember(member);
	}

}
